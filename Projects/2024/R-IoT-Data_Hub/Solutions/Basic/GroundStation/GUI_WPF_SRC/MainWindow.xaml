<Window x:Class="GUIforGND.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="COM Port Reader" Height="450" Width="600">
    <Grid>
        <!-- ComboBox for COM Ports -->
        <ComboBox x:Name="ComPortComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" Width="150"/>

        <!-- Button to Refresh COM Ports -->
        <Button x:Name="RefreshButton" Content="Refresh COM Ports" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,20,0,0" Width="120" Click="RefreshButton_Click"/>

        <!-- Button to Start Reading from COM Port -->
        <Button x:Name="StartButton" Content="Start Reading" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="310,20,0,0" Width="100" Click="StartButton_Click"/>

        <!-- Button to Disconnect from COM Port -->
        <Button x:Name="DisconnectButton" Content="Disconnect" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="420,20,0,0" Width="100" Click="DisconnectButton_Click" IsEnabled="False"/>

        <!-- TextBox for Log Display -->
        <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20,70,20,50">
            <TextBox x:Name="LogTextBox" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12"/>
        </ScrollViewer>

        <!-- TextBlock to Display Status -->
        <TextBlock x:Name="MessageTextBlock" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,20" Text=""/>
    </Grid>
</Window>
